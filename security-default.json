{
  "_policyId" : "",
  "accessControlsPolicy": {
    "enabled" : true,
    "authenticationPolicy" : {
      "authenticationRequired" : true,
      "usernames" : {
        "notEmpty" : true,
        "matches" : ["(?=,*[a-zA-Z]+)(?=.*[0-9]+)(?=.*[!*&^$#@()+ ]+).*", "g"]
      },
      "passwords" : {
        "notEmpty" : true,
        "matches" : ["(?=,*[a-zA-Z]+)(?=.*[0-9]+)(?=.*[!*&^$#@()+ ]+).*", "g"],
        "minLen" : 12,
        "expires?" : false,
        "supportedHashes" : ["bcrypt", "sha256", "md5"],
        "lockout" : {
          "attempts" : 3,
          "automaticReset" : false,
          "tarpitDefault" :  1000
        }
      },
      "mfaRequired" : false
    },
    "authorization" : {
      "authorizationRequired" : false,
      "supportedTypes" : ["flat", "rbac", "none"],
      "rbacPolicy" : {
        "roles" : ["user", "moderator", "admin"],
        "permissions" : ["read", "write", "create", "delete", "approve", "reject"]
      }
    }
  },
  "formProtection" : {
    "enabled" : true,
    "autocompleteAllowed" : false,
    "acceptJsonContent" : true,
    "allowMethodOverride" : false,
    "csrfSettings" : {
      "secretLength" : 64,
      "saltLength" : 24,
      "ignoreMethods" : ["head", "options", "get"],
      "allowHiddenToken" : false
    },
  "sessionPolicy" : {
    "id" : {
      "length" : 128,
      "entropy" : [64, "prng", "sha1"],
      "invalidOnLogout" : true,
      "regenerateOnAuth" : true,
      "forceLogoutOnWindowClose" : true
    },
    "duration" : {
      "idle" : 300000,
      "ttl" : 600000,
      "automaticRenewal" : false
    },
    "cookies": {
      "maxAge" : ,
      "httpOnly" : true,
      "secure" : true,
      "sameSite" : true,
      "domain" : ["same-origin", "parent"],
      "path" :["same-origin", "parent"]
    },
    "forceHttps" : true,
    "concurrentLogins" : false
  },
  "headerConfig" : {
    "securityHeaders" : {
      "csp" : {
        "directives" : {
          "defaultSrc" : ["self"],
          "mediaSrc" : ["self"],
          "frameSrc" : ["self"],
          "frameAncestors" : ["none"],
          "scriptSrc" : ["self"],
          "styleSrc" : ["self"],
          "upgradeInsecureRequests" : true,
          "blockAllMixedContent" : true,
          "reportUri" : {
            "default" : "disabled",
            "uri" : ""
          }
        },
        "reportOnly" : true,
        "useNonce" : false,
        "useHash" : false
      },
      "strictTransportSecurity" : {
        "enabled": true,
        "includeSubDomains": true,
        "preload" : false,
        "maxAge" : 31536000
      },
      "preventClickJacking" : true,
      "referrals" : {
        "enabled" : true,
        "allowFrom" : "same-origin",
        "hidden" : true
      },
      "xssProtection" : {
        "enabled" : true,
        "mode" : "block",
      }
    },
    "cachePolicy" : {
      "enabled" : true,
      "cacheControl" : ["private", "no-cache", "no-store", "no-transform", "max-age=0"],
      "pragma" : "no-cache",
      "eTagsEnabled" : true,
      "vary" : ["origin", "host", "referer"],
    }
  },
  "contentValidation" : {
    "enabled" : true,
    "syntaxValidation" : {
      "integers" : {
        "defaulRange" : ,
        "isInt" : true,
        "forceInt" : true,
        "maxLength" : 8,
        "errorMessage" : "sorry. Need a number."
      },
      ""
      "strings" : {
        "isString" : true,
        "forceString" : true,
        "toLowercase" : true,
        "isEmpty" : false,
        "maxLength" : 30,
        "errorMessage" : "sorry. Need a string"
      },
      "dates" : {
        "defaultFormat" : ,
        "isBlank" : false,
        "isDate" : true,
        "realDate" : true,
        "forceDate" : false,
        "startBeforeEnd" : true,
        "errorMessage" : "sorry. invalid date"
      },
      "inputFields" : {
        "defaultChars" : ,
        "maxLength" : 250,
        "errorMessage" : "sorry. please try again"
      },
      "regexFormats" : {
        "alphanumeric" : ,
        "numbersOnly" :,
        "email" : ,
        ""
      }

    },


    "sessions" : {
      "validateID": true,
      "tlsVersionCheck" : true,
      "httpsCheck" : true
    },
    "url" : {
      "encodeUrls" : true,
    },
    "files" : {
      "maxSize" : "10Mb",
      "randomizeFilename" : true,
      "fileTypesAllowed" : [".jpg", ".gif", ".png"]
    },
    "html" : {
      "inputValues"
    },
    "requests": {
      "headerCheck" : ["origin", "host", "referer", "x-forwarded-host"],

    },
    "blockOnFail" : true
  },
  "dbSecurityPolicy" :{
    "enabled" : true,
    "disableJsExecution" : true,
    "globalOperatorsDisabled" : true,
    "encryptionEnabled" : true
  },
  "connectionPolicy" : {
    "redirectSecure" : true,
    "rejectWeakCiphers" : true,
    "rejectInsecureTLS" : true
  },
  "resourceSharingPolicy" : {
    "default" : "same-origin",
    "corsEnabled" : false,
    "corsSettings" : {
      "preflightRequests" : {
        "onMethod" : ["put", "delete", "connect", "options", "trace", "patch"],
        "onHeader" : ["accept", "accept-language", "content-language", "dpr", "save-data", "viewpot-width", "width"],
        "maxAge" : 3600
      },
      "responseHeaders" : {
        "allowCredentials" : true,
        "validateHeaders" : ["origin", "expose-headers"]
      }
    },
    "validateWhitelist" : true
  },
  "loggingPolicy" : {
    "enabled" : true,
    "levels" : ["info", "warn", "error", "debug", "verbose"],
    "logCollection" : {
      "storage" : "/var/log/${appName}/",
      "retentionPeriod" : 4,
      "port" : 5601
    },
    "analytics" : {
      "enabled" : false,
      "config" : {
        "host" : "localhost",
        "type" : "telegraf",
        "port" : 8125
        }
      }
    }
  }
}
